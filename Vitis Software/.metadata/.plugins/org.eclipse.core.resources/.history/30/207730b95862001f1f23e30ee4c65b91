#ifndef _SPI_CORE_H
#define _SPI_CORE_H

#include "io_rw.h"
#include "io_map.h"

typedef enum{
	RD_DATA_REG = 0,
	SS_REG = 1,
	WR_DATA_REG = 2,
	SPI_CTRL_REG = 3
}SPI_REG;

typedef struct{
	uint32_t base_reg;
	uint32_t ctrl_reg;
}spi_handle_t;

/**
 * @brief Constructor to initialize the SPI Core
 * @note SPI set to 400kHz freq by default with clcok polarity = 0 & clokc phase = 0
 * @param core_addr - This is the address of the spi core itself
 */
void spi_init(spi_handle_t* self, uint32_t core_addr);


#endif //_SPI_CORE_H
