#ifndef _UART_H_INCLUDED
#define _UART_H_INCLUDED

#include "io_rw.h"
#include "io_map.h"

/********* UART Macros ***********/
#define RX_DATA_MASK				0x000000ff;
#define RX_EMPTY_MASK				0x00000100;
#define TX_FILL_MASK				0x00000200;

//UART Register mapping
typedef enum{
	READ_DATA_REG = 0,
	DVSR_REG = 1,
	WR_DATA_REG = 2,
	RM_RD_DATA_REG = 3
}UART_REG;

//UART Handle
typedef struct{
	uint32_t base_reg;
	uint32_t baud_rate;
}uart_handle_t;

/*********** Function Declarations **********/

uart_init(uart_handle_t* self, uint32_t core_base_addr);


#endif
