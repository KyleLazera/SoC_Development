#include "io_rw.h"
#include "io_map.h"

//Macros for the mode of the GPIO
#define INPUT_MODE				0
#define OUTPUT_MODE				1

//Register declarations
typedef enum{
	INPUT_REG,
	OUTPUT_REG,
	CTRL_REG
}GPIO_Reg;

//Handle for GPIO
typedef struct{
	uint32_t base_reg;
	uint32_t wr_data;
	uint32_t ctrl_reg;
}gpio_handle_t;

/****** GPIO Functions *******/
void gpio_init(gpio_handle_t* self, uint32_t base_core_addr)
{
	//Set addr for peripheral
	self->base_reg = base_core_reg;
	//Clear data to write
	self->wr_data = 0;
	self->ctrl_reg = 0;
}
