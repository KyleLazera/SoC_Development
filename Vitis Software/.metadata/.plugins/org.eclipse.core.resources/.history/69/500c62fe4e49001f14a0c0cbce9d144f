#include "io_rw.h"
#include "io_map.h"

//GPO Handle
typedef struct{
	uint32_t base_addr;
	uint32_t wr_data;
}GPO_Handle_t;

/*
 * @brief Init the GPO object passed as an argument with the core addr and 0 for writing data
 */
void GPO_Init(GPO_Handle_t* self, uint32_t core_base_addr)
{
	self->base_addr = core_base_addr;
	self->wr_data = 0;
}

/*
 * @brief Function used to write data to the GPO core (turn on LEDs)
 */
void GPO_Write(GPO_Handle_t* self, uint32_t data)
{
	self->wr_data = data;
	io_write(self->base_addr, 0, self->wr_data);
}
